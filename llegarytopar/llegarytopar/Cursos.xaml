                    <Grid Height="886" Width="1266">
                        <Grid.Background>
                            <SolidColorBrush Color="#FFFFD54F" Opacity="0.2"/>
                        </Grid.Background>
                        <Image Source="Resources/cursos/pc.png" HorizontalAlignment="Left" Height="293" Margin="752,222,0,0" VerticalAlignment="Top" Width="280"/>
                        <Label Content="Aplicaciones Multiplataforma" HorizontalAlignment="Left" Margin="40,23,0,0" VerticalAlignment="Top" Height="109" Width="1008" BorderBrush="Black" Background="{x:Null}" FontFamily="Microsoft JhengHei UI" FontSize="72"/>

                        <Label Content="En este Grado Superior. Aprenderás a programar para&#xD;&#xA;dispositivos." HorizontalAlignment="Left" Margin="62,170,0,0" VerticalAlignment="Top" Height="180" Width="669" Background="{x:Null}" FontSize="24" FontFamily="Microsoft Sans Serif"/>
                        <Label Content="1º Curso." HorizontalAlignment="Left" Margin="62,350,0,0" VerticalAlignment="Top" Height="65" Width="220" BorderBrush="Black" Background="{x:Null}" FontFamily="Microsoft JhengHei UI" FontSize="48" FontWeight="Bold"/>
