            <TabItem Header="GS. Infantil" Margin="495,0,-495,0">
                <Viewbox Stretch="Uniform">
                    <Grid Height="886" Width="1266">
                        <Grid.Background>
                            <SolidColorBrush Color="#FFE67681" Opacity="0.2"/>
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
